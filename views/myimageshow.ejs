<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/signin.css" />
  </head>

  <body>
    <%include header.ejs %>

    <% if (locals.error) { %>
    <div id="alt_warning" class="alert alert-warning">
      <%= error %>
    </div>
    <% } %>

    <% if(images){ %>
    <div class="container" id="gallery_row">

      <div class="row">

        <% for(var index in images){ %>

        <% if(index % 3 == 0){ %>
          </div>
          <div class="row">
        <% } %>

         <div class="col-md-4" id="gallery_column">
          <div class="thumbnail">
            <a href= <%= images[index].path %> >
              <img src=<%= images[index].path %> style="width:100%">
              <div class="caption">
                  <h4 class="label label-primary">
                  <%= images[index].caption %>
                  </h4>
              </div>

            </a>
            <div class="caption">
              <h4 class="label label-primary">
                <%= images[index].upload_time %>
              </h4>
            </div>
            <button type="button" class="btn btn-danger" onclick="location.href='/myimageremove?name=<%=images[index].path%>'">Remove</button>
          </div>
         </div>
        <% } %>

      </div>
    </div>
<% } %>
    <div class="container-fluid" id="footer">
      <ul class="pager">
        <% if(locals.current_page == 1){ %>
        <li class="disabled">
          <% } %>
          <% if(locals.current_page > 1){ %>
        <li class="previous">
          <% } %>
          <a href="/myimageshow?page=<%=locals.current_page-1%>">Previous</a>
        </li>
        <li>
          <ul class="pagination">
            <% for(var i = 0; i < locals.total_page; i++){ %>
               <% if((i+1) == locals.current_page){ %>
               <li class="active"> <a href="/myimageshow?page=<%=i+1%>"> <%= i+1%> </a></li>
               <% } %>
               <% if((i+1) != locals.current_page){ %>
               <li> <a href="/myimageshow?page=<%=i+1%>"> <%= i+1%> </a></li>
               <% } %>
               <% } %>
          </ul>
        </li>

        <% if(locals.current_page == locals.total_page){ %>
        <li class="disabled">
          <% } %>
          <% if(locals.current_page < locals.total_page){ %>
             <li class="next">
               <% } %>
               <a href="/myimageshow?page=<%=locals.current_page+1%>">Next</a>
             </li>
      </ul>
    </div>>

  </body>
</html>
